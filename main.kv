# Filename: main.kv

WindowManager:
    id: window_manager
    results_scrn: results_screen
    ParamWindow:
        id: param_screen
    ResultsWindow:
        id: results_screen

<ParamWindow>:
    name: "params"
    rplower: rplower
    rpupper: rpupper
    rslower: rslower
    rsupper: rsupper
    alower: alower
    aupper: aupper
    i0lower: i0lower
    i0upper: i0upper
    ipvlower: ipvlower
    ipvupper: ipvupper
    tempc: tempc
    series: series
    parallel: parallel

    GridLayout:
        cols:1
        padding: 40
        spacing: 10
        size: root.width, root.height

        GridLayout:
            cols: 2
            Label:
            GridLayout:
                cols: 2

                Label:
                    text: "Lower Bound"

                Label:
                    text: "Upper Bound"

            Label:
                text: "Shunt Resistance Rp: "

            GridLayout:
                cols: 2
                TextInput:
                    multinline:False
                    text: "2"
                    halign: "center"
                    id: rplower
                TextInput:
                    multinline:False
                    text: "100"
                    halign: "center"
                    id: rpupper

            Label:
                text: "Series Resistance Rs: "

            GridLayout:
                cols: 2
                TextInput:
                    multinline:False
                    text: "0"
                    halign: "center"
                    id: rslower
                TextInput:
                    multinline:False
                    text: "1"
                    halign: "center"
                    id: rsupper

            Label:
                text: "Ideality Factor a: "

            GridLayout:
                cols: 2
                TextInput:
                    multinline:False
                    text: "1"
                    halign: "center"
                    id: alower
                TextInput:
                    multinline:False
                    text: "2"
                    halign: "center"
                    id: aupper

            Label:
                text: "Saturation Current I0: "

            GridLayout:
                cols: 2
                TextInput:
                    multinline:False
                    text: "1e-07"
                    halign: "center"
                    id: i0lower
                TextInput:
                    multinline:False
                    text: "1e-04"
                    halign: "center"
                    id: i0upper

            Label:
                text: "Photocurrent Ipv: "

            GridLayout:
                cols: 2
                TextInput:
                    multinline:False
                    text: "0"
                    halign: "center"
                    id: ipvlower
                TextInput:
                    multinline:False
                    text: "10"
                    halign: "center"
                    id: ipvupper

            Label:
                text: "Temperature (Â°C): "
            TextInput:
                multinline:False
                text: "33"
                halign: "center"
                id: tempc

            Label:
                text: "Number of cells in series"

            TextInput:
                multinline:False
                text: "1"
                halign: "center"
                id: series

            Label:
                text: "Number of cells in parallel"

            TextInput:
                multinline:False
                text: "1"
                halign: "center"
                id: parallel

            Label:
                text: "I-V curve file location: "

            Button:
                text: "Select File"
                on_release: root.browse_files()

        Button:
            text:"Calculate"
            on_release:
                root.manager.current = "results"
                root.manager.transition.direction = "left"
                root.calculate(root.manager)

<ResultsWindow>:
    name: "results"
    graphid: graphid

    FloatLayout:

        BoxLayout:
            size_hint: 0.98, 0.6
            pos_hint: {'center_x': 0.5, 'top': 0.99}
            id: graphid

        GridLayout:
            cols: 2
            id: result_grid
            pos_hint: {'center_x': 0.5, 'bottom': 0.8}
            size_hint: 0.7, 0.5

            Label:
                text: "Series Resistance: "
            Label:
                id: rs_label
                text: "0"

            Label:
                text: "Shunt Resistance"
            Label:
                id: rp_label
                text: "0"

            Label:
                text: "Ideality Factor"
            Label:
                id: a_label
                text: "1"

            Label:
                text: "Saturation Current"
            Label:
                id: i0_label
                text: "0"

            Label:
                text: "Photocurrent"
            Label:
                id: "ipv_label"
                text: "0"

            Label:
                text: "Root Mean Squared Error"
            Label:
                id: rmse_label
                text: "0"

        Button:
            size_hint: 0.2, 0.1
            pos_hint: {'center_x': 0.5, 'bottom': 0.99}
            text: "Go Back"
            on_release:
                root.manager.current = "params"
                root.manager.transition.direction = "right"
